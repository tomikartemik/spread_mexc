# Токен авторизации из браузера (authorization: WEB_...)
MEXC_WEB_AUTH_TOKEN=WEB_xxx
# Необязательно: переопределить базовый URL и таймаут REST
MEXC_WEB_BASE_URL=https://futures.mexc.com/api/v1
MEXC_WEB_TIMEOUT=30s

# Конфиг монет: можно указать JSON прямо здесь или путь в SYMBOLS_FILE (по умолчанию spread_pairs.json)
SYMBOLS_CONFIG=
SYMBOLS_FILE=spread_pairs.json

# Параметры стратегии
ARBITRAGE_QUOTE_SIZE=5
ARBITRAGE_LEVERAGE=10
ARBITRAGE_ENTRY_THRESHOLD=7
ARBITRAGE_EXIT_THRESHOLD=2
ARBITRAGE_STOP_LOSS=1
ARBITRAGE_ENTER_DELTA=2
ARBITRAGE_CONFIRM_DROP=0.3
ARBITRAGE_CONFIRM_DURATION=500ms
ARBITRAGE_MIN_ENTRY_SPREAD=8
ARBITRAGE_INITIAL_BALANCE=0
ARBITRAGE_DECISION_INTERVAL=1s
ARBITRAGE_DEBUG_PRICES=0

# Запрос цен MEXC
MEXC_PRICE_POLL_INTERVAL=5s
MEXC_PRICE_WORKERS=4
MEXC_PRICE_DELAY=0s
MEXC_PRICE_MAX_RETRIES=3
MEXC_PRICE_RETRY_DELAY=500ms

# OKX Web3
OKX_WEB3_ACCESS_KEY=your-key
OKX_WEB3_SECRET=your-secret
OKX_WEB3_PASSPHRASE=your-passphrase
OKX_PRICE_POLL_INTERVAL=2s
OKX_PRICE_REQUEST_DELAY=200ms
OKX_PRICE_MAX_RETRIES=3

# Telegram уведомления (опционально)
TELEGRAM_BOT_TOKEN=123456:ABCDEF
TELEGRAM_CHAT_ID=-1001234567890
